<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/emojicon_tab_selected"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:id="@+id/intercalate_back"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

        <TextView
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新消息提醒"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/new_message"
            android:background="#fff"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="接收新消息通知"
            android:textSize="20dp"
            android:drawableRight="@drawable/back"/>
        <TextView
            android:id="@+id/voice"
            android:background="#fff"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="声音"
            android:textSize="20dp"
            android:drawableRight="@drawable/back"/>
        <TextView
            android:id="@+id/shock"
            android:background="#fff"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="震动"
            android:textSize="20dp"
            android:drawableRight="@drawable/back"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="聊天设置"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/speaker"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用扬声器播放语音"
        android:textSize="20dp"
        android:drawableRight="@drawable/back"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Blacklist"
            android:background="#fff"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通讯录黑名单"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/personal_data"
            android:background="#fff"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/diagnosis"
            android:background="#fff"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="诊断"
            android:textSize="20dp" />
        <Button
            android:id="@+id/Exit_login"
            android:background="@color/btn_login_normal"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出登陆"/>
    </LinearLayout>
</LinearLayout>